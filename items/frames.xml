<mxRender>
	<mxMain>
		<data>
			{
				logo:{
					text1: "MX",
					text2: "RENDER",
				},
				nav:{
					list: [
						"INTRO"
					],
				}
			}
		</data>
		<event>
			{
				navClick:{
					bind: ".option",
					event: "onclick",
				},
			}
		</event>
		<css>
			.mxMain{
				padding-top: 2em;
				padding-bottom: 2em;
			}
			.mxMain .mxHeader{
				position: fixed;
				left: 0;
				top: 0;
			}
			.mxMain .mxTailer{
				position: fixed;
				left: 0;
				bottom: 0;
			}
		</css>
		<template>
			<![CDATA[
				<item name = "mxHeader"></item>
				<div class = "mainContent">{$html}</div>
				<item name = "mxTailer"></item>
			]]>
		</template>
	</mxMain>
